<%= simple_form_for @gadget do |f| %>
  <%= f.collection_select :category_id, Category.all, :id, :name, {promt:"Choose a category"} %>
  <%= f.input :gad_title %>
  <%= f.input :gad_intro %>
  <%= f.input :gad_img %>
  <%= f.input :gad_price %>
  <%= f.input :gad_link %>
  <%= f.input :gad_youtube %>

  <%= f.button :submit %>
<% end %>